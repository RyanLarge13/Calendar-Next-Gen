generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  event    String
  date     DateTime @db.Date
  color    String
  updateaAt DateTime @updatedAt
  createdAt DateTime @default(now())
  userId   String
  User     User     @relation(fields: [userId], references: [id])

  @@id([event, userId])
}

model User {
  id       String      @id @default(uuid())
  avatarUrl String? 
  username String
  email    String 
  password String?
  birthday DateTime?
  createAt DateTime @default(now())
  Event   Event[]

  @@unique([email])
}
