generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  kind String?
  summary    String
  description String?
  location String?
  date     DateTime @db.Date
  reminders Json?
  repeats Json?
  attatchments Json?
  color    String
  start Json
  end Json
  updated DateTime @updatedAt
  created DateTime @default(now())
  userId   String
  User     User     @relation(fields: [userId], references: [id])
  
  @@id([userId])
}

model User {
  id       String      @id @default(uuid())
  avatarUrl String? 
  username String @unique
  email    String @unique
  password String
  birthday DateTime?
  createAt DateTime @default(now())
  Event   Event[]

  @@unique([username, email])
}
